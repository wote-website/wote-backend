{% extends 'base.html.twig' %}

{% block title %}Classification index{% endblock %}

{% block body %}
    <h1>Classification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreationDate</th>
                <th>ModificationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classification in classifications %}
            <tr>
                <td>{{ classification.id }}</td>
                <td>{{ classification.name }}</td>
                <td>{{ classification.description }}</td>
                <td>{{ classification.creationDate ? classification.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ classification.modificationDate ? classification.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('classification_show', {'id': classification.id}) }}">show</a>
                    <a href="{{ path('classification_edit', {'id': classification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classification_new') }}">Create new</a>
{% endblock %}
