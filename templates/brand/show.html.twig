{% extends 'base.html.twig' %}

{% block title %}Brand{% endblock %}

{% block body %}
    <h1>Brand</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr>
                <th>Pays d'origine</th>
                <td>{% if brand.country %}
                    {{ brand.country.name }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ brand.modificationDate ? brand.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('brand_index') }}">back to list</a>

    <a href="{{ path('brand_edit', {'id': brand.id}) }}">edit</a>

    {{ include('brand/_delete_form.html.twig') }}
{% endblock %}
