{% extends 'base.html.twig' %}

{% block title %}Profile index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Propri√©taire</th>
                <th>Public</th>
                <th>Description</th>
                <th>CreationDate</th>
                <th>ModificationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td>{{ profile.title }}</td>
                <td>{{ profile.author.email }}</td>
                <td>{{ profile.isPublic }}</td>
                <td>{{ profile.description }}</td>
                <td>{{ profile.creationDate ? profile.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ profile.modificationDate ? profile.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('profile_show', {'id': profile.id}) }}">show</a>
                    <a href="{{ path('profile_edit', {'id': profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profile_new') }}">Create new</a>
{% endblock %}
