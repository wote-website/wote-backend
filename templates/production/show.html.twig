{% extends 'base.html.twig' %}

{% block title %}Production{% endblock %}

{% block body %}
    <h1>Production</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ production.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ production.value }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ production.comment }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ production.creationDate ? production.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModificationDate</th>
                <td>{{ production.modificationDate ? production.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('production_index') }}">back to list</a>

    <a href="{{ path('production_edit', {'id': production.id}) }}">edit</a>

    {{ include('production/_delete_form.html.twig') }}
{% endblock %}
