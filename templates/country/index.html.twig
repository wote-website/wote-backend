{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Country index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Name FR</th>
                <th>Alpha3</th>
                <th>CreationDate</th>
                <th>ModificationDate</th>
                <th>GdpPpp</th>
                <th>GdpPppPerCapita</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries|sort((a, b) => a.name <=> b.name) %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>{{ country.frName }}</td>
                <td>{{ country.alpha3 }}</td>
                <td>{{ country.creationDate ? country.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ country.modificationDate ? country.modificationDate|date('Y-m-d') : '' }}</td>
                <td>{{ country.gdpPpp }}</td>
                <td>{{ country.gdpPppPerCapita }}</td>
                <td>
                    <a href="{{ path('country_show', {'id': country.id}) }}">show</a>
                    <a href="{{ path('country_edit', {'id': country.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('country_new') }}">Create new</a>
{% endblock %}
